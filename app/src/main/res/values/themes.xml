<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlcoolOuGasolina" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0099d7</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">#1F1F1F</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#B85045</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MyActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">#0099d7</item>
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ThemeOverlay.AlcoolOuGasolina.FullscreenContainer" parent="">
    </style>
</resources>
