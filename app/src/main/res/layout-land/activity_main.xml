<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2C9AB"
    android:backgroundTint="#005c81"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="577dp"
        android:layout_height="309dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/rounded_layout"
        android:backgroundTint="?android:backgroundTint"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="uma bomba de gasolina ilustrando o app"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:text="@string/title"

            android:textAlignment="center"
            android:textColor="#0099d7"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edGasolina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:ems="10"
            android:hint="@string/precoGasolina"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/edAlcool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:ems="10"
            android:hint="@string/precoAlcool"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btCalcular"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_height="55sp"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="20dp"
                android:backgroundTint="#005c81"
                android:onClick="onClickBtCalcular"
                android:text="@string/calcular"
                android:textColor="#fff" />

            <Space
                android:layout_width="80sp"
                android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/swPercentual"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="170dp"
                android:text="75%"
                android:textSize="36sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>